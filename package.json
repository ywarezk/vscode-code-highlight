{
  "name": "code-highlight",
  "publisher": "academeez",
  "displayName": "Code Highlight for Lectures",
  "description": "Perfect tool for programming instructors! Highlight code sections and add Markdown annotations during live coding lectures, tutorials, and demos. Organize notes by lessons, review them with keyboard navigation, and keep your audience engaged - all without modifying source code.",
  "version": "0.0.1",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "keywords": [
    "education",
    "teaching",
    "lecture",
    "instructor",
    "educator",
    "tutorial",
    "live coding",
    "code annotation",
    "code highlighting",
    "markdown notes",
    "code review",
    "presentation",
    "demonstration",
    "code explanation",
    "programming tutorial",
    "code walkthrough",
    "educational tool",
    "classroom",
    "course",
    "lesson planning",
    "code comments",
    "annotation tool"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ywarezk/vscode-code-highlight.git"
  },
  "homepage": "https://github.com/ywarezk/vscode-code-highlight#readme",
  "bugs": {
    "url": "https://github.com/ywarezk/vscode-code-highlight/issues"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-highlight.addNotes",
        "title": "Add Lecture Notes",
        "category": "CodeHighlight"
      },
      {
        "command": "code-highlight.reviewNotes",
        "title": "Review Lecture Notes",
        "category": "CodeHighlight"
      },
      {
        "command": "code-highlight.createLesson",
        "title": "Create New Lesson",
        "category": "CodeHighlight"
      },
      {
        "command": "code-highlight.deleteLesson",
        "title": "Delete Lesson",
        "category": "CodeHighlight"
      },
      {
        "command": "code-highlight.setActiveLesson",
        "title": "Set Active Lesson",
        "category": "CodeHighlight"
      },
      {
        "command": "code-highlight.report",
        "title": "Report Issue",
        "category": "CodeHighlight"
      }
    ],
    "menus": {
      "issue/reporter": [
        {
          "command": "code-highlight.report"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-highlight.addNotes",
        "key": "ctrl+alt+l",
        "mac": "ctrl+alt+l",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "code-highlight.reviewNextNote",
        "key": "right",
        "when": "codeHighlight.reviewMode && (markdownPreviewFocus || activeWebviewPanelId == 'markdown.preview')"
      },
      {
        "command": "code-highlight.reviewPrevNote",
        "key": "left",
        "when": "codeHighlight.reviewMode && (markdownPreviewFocus || activeWebviewPanelId == 'markdown.preview')"
      },
      {
        "command": "code-highlight.exitReviewNotes",
        "key": "escape",
        "when": "codeHighlight.reviewMode && (markdownPreviewFocus || activeWebviewPanelId == 'markdown.preview')"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}